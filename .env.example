# Financial Data Pipeline - Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=findata
POSTGRES_PASSWORD=findata_secret
POSTGRES_DB=financial_data
DATABASE_URL=postgresql://findata:findata_secret@localhost:5432/financial_data

# =============================================================================
# DATA SOURCE API KEYS
# =============================================================================
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Optional: Polygon.io (has generous free tier)
# Get your key from: https://polygon.io/
POLYGON_API_KEY=your_polygon_key_here

# Yahoo Finance doesn't require an API key (uses yfinance library)

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Symbols to track (comma-separated)
DEFAULT_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,META

# Rate limiting (requests per minute) - be conservative with free tiers
ALPHA_VANTAGE_RATE_LIMIT=5
POLYGON_RATE_LIMIT=5

# Batch size for database inserts
DB_BATCH_SIZE=1000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# REDIS (optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DASHBOARD
# =============================================================================
STREAMLIT_PORT=8501
